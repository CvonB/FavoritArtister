@using FavoritArtister.Models
@model Band
<html>
<head>
    <title>Products</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
</head>
<body>
    <h1>@Model.Name</h1>
    <p>
        @Model.Description
    </p>
    <img width="500" src="/images/@Url.Content(Model.Picture)"/>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.Song" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <ul>
        @foreach (var item in Model.Albums)
        {
            <li> @item.Name - @item.Year </li>
        }
    </ul>
</body>
</html>
